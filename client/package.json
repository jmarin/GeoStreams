  "scripts": {
    "install": "./node_modules/packa/node_modules/.bin/bower install",
    "postinstall": "./node_modules/packa/bin/packa build --no-mangle --loglevel info --target target/resources",
    "jshint": "grunt jshint",
    "test": "grunt test",
    "justtest": "grunt cafemocha",
    "watch": "grunt watch",
    "start": "node ./server.js --debug config.json",
    "start-prod": "node ./server.js --build target/resources config.json"
